<div class="scrollDown">
  <p class="text">Scroll Down</p>
</div>

<style lang="scss">
  .scrollDown {
    height: 100vh;
    display: grid;
    place-items: center;
    background: #c3c3c3;
  }

  .text {
    font-family: "Poppins", sans-serif;
    display: block;
    width: max-content;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    font-size: 80px;
    font-weight: bold;
  }
</style>

<script>
  import { gsap } from "gsap";

  const text = document.querySelector(".text");
  const backgroundStart = "linear-gradient( rgb(68, 64, 63) 100%, rgba(68, 64, 63, 0) 0%)";
  const backgroundEnd = "linear-gradient( rgb(68, 64, 63) 100%, rgba(68, 64, 63, 0.3) 0%)";
  const timeline = gsap.timeline({ repeat: -1 });
  timeline.to(
    text,
    {
      backgroundImage: backgroundStart,
      duration: 2,
      ease: "power4.out",
    },
    "+1"
  );
  timeline.to(
    text,
    {
      backgroundImage: backgroundEnd,
      duration: 0.3,
      ease: "power4.InOut",
      opacity: 0,
    },
    "=+1.5"
  );
  timeline.play();
</script>

---
import '../modules/css/main.scss';
import Header from '../components/common/Header.astro';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@200;500&display=swap" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@200;500&family=Poppins:wght@500&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <script type="module" src="../../src/modules/js/main.js"></script>
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <style is:global>
      html {
        font-family: 'Noto Sans JP', sans-serif;
        background-color: #f6f6f6;
      }
    </style>
  </body>
</html>
